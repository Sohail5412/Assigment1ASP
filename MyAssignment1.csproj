<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
		<!-- ASP.NET Core MVC framework -->
		<PackageReference Include="Microsoft.AspNetCore.App" />

		<!-- For EF Core, if needed in the future -->
		<!--
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.*" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.*" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="7.0.*" />
    -->

		<!-- If you add any other NuGet packages, they'll appear here -->
	</ItemGroup>

	<ItemGroup>
		<!-- Ensures Startup.cs and Program.cs are part of the compile process -->
		<Compile Include="Startup.cs" />
		<Compile Include="Program.cs" />
	</ItemGroup>

</Project>
